package DEC_31;

import java.util.Scanner;

public class ArrayStoreExample {

    public static void storeObjects() {
        Object[] strings = new String[2]; 
        Scanner sc = new Scanner(System.in);

        try {
            System.out.println("Enter up to 5 values for the array (Strings only):");
            
            for (int i = 0; i < strings.length; i++) {
                System.out.print("Enter value for index " + i + ": ");
                String input = sc.nextLine(); // Read user input
                strings[i] = input; // Store user input in the array
            }

            System.out.println("Objects stored successfully.");

            // Adding an incompatible type for testing exception handling
            System.out.println("Attempting to store an Integer...");
            strings[3] = 123; // This will trigger an ArrayStoreException

        } catch (ArrayStoreException e) {
            System.out.println("ArrayStoreException caught: Incompatible type: " + e.getMessage());
        } finally {
            sc.close(); // Close the scanner to avoid resource leaks
        }
    }

    public static void main(String[] args) {
        storeObjects(); // Call the storeObjects method
    }
}
